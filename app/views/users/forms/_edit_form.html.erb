<%= form_for(@user) do |f| %>
  <%= render partial: "shared/error_messages", :locals => {:target => @user} %>

  <fieldset>
    <div>
      <div><%= f.label :email %></div>
      <div ><%= f.text_field :email %></div>
    </div>

    <div>
      <div><%= f.submit "Confirm Info" %></div> 
    </div>

    <div id="destroy-link"><%= link_to 'Delete User', @user, method: :delete, data: { confirm: "Are you sure you want to delete #{@user.name}?" } if current_user == @user %></div>
  </fieldset>
<% end %>