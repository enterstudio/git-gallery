<div class="white-card">

  <h1><%= @user.name %></h1>
  <%= form_for(@user, :html => {:class => "form-horizontal"}) do |f| %>
  <%= render :partial => "shared/error_messages", :locals => {:target => @user} %>

  <fieldset>
    <legend>Please update your account</legend>

      <%= f.label(:email, :class => "control-label") %>
      <%= f.text_field :email %>

      <div class="controls edit-user">
        <ul class="horizontal">
          <li>
          <%= f.submit "Confirm Info", :class => "confirm-info" %>
          </li>
          <li>
          <%= link_to 'Delete User', @user, method: :delete, :class => "delete-user", data: { confirm: "Are you sure you want to delete #{@user.name}?" } %>
          </li>
        </ul>
      </div>

  </fieldset>
  <% end %>

</div>





