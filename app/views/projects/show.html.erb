<p id="notice"><%= notice %></p>

<h1 id="project-title"><%= @project.name %></h1><%= link_to 'Edit', edit_project_path(@project) %>

<div class="clearfix"></div>

<div class="gg-imgplace">
  <%= project_image(@project) %>
</div>

<div id="project-description">
  <h4>Description</h4>
  <p><%= @project.description %></p>
</div>

<%= render "tech_tags" %>

<div class="clearfix"></div>

<%= render "contributors" %>

