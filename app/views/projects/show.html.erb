<div class="clearfix"></div>

<p>
  <h3 id="features-title">Features</h3>
  <div id="new-feature"><%= link_to 'New', new_user_feature_path(current_user) %></div><br>
  <% @project.features.each do |feature| %>
    <div class="project-feature">
      <div class="project-feature-title">
        <h4><%= link_to feature.title, feature_path(feature) %></h4>
      </div>
      <div class="project-feature-user-name">
        <h4><%= link_to feature.user.name, user_path(feature.user) %></h4>
      </div>
      <div class="clearfix"></div>
      <ul class="gg-list-inline">
        <% feature.uploads[0,3].each do |upload| %>
          <li><div class="gg-list-inline">
            <%= image_tag upload.image_url %>
          </div></li>
        <% end %>
      </ul>
      <br>
      <div class="project-feature-description">
        <%= feature.description %>
      </div>
      <br>
      <br>
    </div>
    <div class="clearfix"></div>
  <% end %>
</p>
