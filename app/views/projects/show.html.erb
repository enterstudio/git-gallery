<div class="clearfix"></div>
<p>
  <h3 class="sidebar-title">Features</h3><br>
  <% @project.features.each do |feature| %>
    <div class="project-feature">
      <div class="project-feature-title"><h4><%= link_to feature.title, feature_path(feature) %></h4></div>
      <div class="project-feature-user-name"><h4><%= link_to feature.user.name, user_path(feature.user) %></h4></div>
      <br>
      <% feature.uploads[0,3].each do |upload| %>
        <div class="project-feature-image"><%= image_tag upload.image_url %></div>
      <% end %>
      <br>
      <div class="project-feature-description"><%= feature.description %></div>
      <br><br>
    </div>
    <div class="clearfix"></div>
  <% end %>
</p>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'All Projects', projects_path %> | 
<%= link_to 'All Users', users_path %> |
<%= link_to "Upload an Image", [:new, @project, :upload] %> |
<%= link_to 'New feature', new_user_feature_path(current_user) %> |







