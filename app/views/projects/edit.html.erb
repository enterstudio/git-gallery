<h1><%= @project.name %></h1>
<%= form_for(@project, :html => {:class => "form-horizontal"}) do |f| %>
  <%= render :partial => "shared/error_messages", :locals => {:target => @project} %>
  <fieldset>
    <legend>Please update the project</legend>
    
    <div class="control-group">
      <%= f.label :name, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, :class => "control-label" %>
      <div class="controls">
        <%= f.text_area :description, :class => "edit_form_text_area" %> <!-- USE THIS CLASS TO EDIT WIDTH OF TEXT_AREA -->
      </div>
    </div>

    <div class="control-group">
      
      <%= f.label :image, :class => "control-label" %>
      <div class="controls">
        <%= f.file_field :image %>
      </div>
    </div>

    <div class="controls">
      <%= f.submit "Confirm Info" %>
    </div>
  </fieldset>
<% end %>
