<h1><%= @project.name %></h1>
<%= form_for(@project, :html => {:class => "form-horizontal"}) do |f| %>
  <%= render :partial => "shared/error_messages", :locals => {:target => @project} %>
  <fieldset>

    <legend>Please update the project</legend>
    
    <div class="control-group">
      <%= f.label :name, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name, :id => "edit_form_name" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, :class => "control-label" %>
      <div class="controls">
        <%= f.text_area :description, :rows => 10, :id => "edit_form_text_area" %>
      </div>
    </div>

    <%= f.label :image, :class => "control-label" %>
    <div class="controls">
      <%= image_tag image_link(@project), :id => "edit_form_image", :class => "thumbnail" %>
      <%= f.file_field :image %>
    </div>
<br>
<br>
    <div class="controls">
      <%= f.submit "Confirm Info" %>
    </div>
  </fieldset>
<% end %>
