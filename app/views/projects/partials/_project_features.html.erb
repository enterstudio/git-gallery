<div class="project-features-carousels-container">
  <div class="accordion" id="accordion">

  <% project.features.each_with_index do |feature, index| %>
  <!-- ******************************************************* -->
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= index %>">
        <%= feature.title %>
      </a>
    </div>
    <div id="collapse<%= index %>" class="accordion-body collapse">
      <%= render :partial => "projects/partials/carousel_for_feature", :locals => { :feature => feature, :index => index} %>
    </div>
  </div>
  <!-- ******************************************************* -->
  <% end %>

  </div>
</div>


