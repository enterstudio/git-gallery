<div class="span12 feature-section">

  <div>
    <h3 id="features-title" class="section-header">Features</h3>
    <%= link_to 'New', new_project_feature_path(@project) %>
  </div>

  <div id="features-slide">
    <% @project.features.each_with_index do |feat, index| %>
      <div class="feature">
        <h2><%= link_to feat.title, feature_path(feat), :class => "feature-card-title" %></h2>
      </div>
    <% end %>

  </div>

  <%= render :partial => "feature_carousel", :locals => {:features => @project.features }%>

  

</div>
  
    

      

      

    
      


    