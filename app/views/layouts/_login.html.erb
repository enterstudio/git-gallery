<% if !logged_in? %>
  <a href="#" class="top-sign-in">Sign in with GitHub</a>
  <div class="login-box">
    <a class="close login-box-close" href="#">X</a>
    <h4 class="login-box-head">Login</h4>

    <% if current_user %>
      Signed in as <%= current_user.name %>!
      <%= link_to "Sign out", signout_path %>
    <% else %>
      <i class="icon-github">
        <br><%= link_to "Sign in using Github", "/auth/github" %>
      </i>
      <br><br>
      <p><em>(If you don't have a GitHub account, GTFO)</em></p>
    <% end %>

  </div>
<%else %>
  <%= link_to "Logout", logout_path, class: 'top-sign-in'%>
<% end %>
