<!-- TRYING TO SHOW THE PROJECTS FROM A GIVEN USER FOR THE SELECTED TECHNOLOGY -->
<h1><%= @user.name %>'s <i><%= @technology.name %></i> Features</h1>

<% @user.tech_features(@technology).each do |r| %>
  <ul>
    <li><%= link_to r.title, user_feature_path(@user.id, r.id) %></li>
  </ul>
<% end %>

<%= link_to_function "Back", "history.back()" %> | 
<%= link_to "#{@user.name}'s Features", user_features_path(@user) %>