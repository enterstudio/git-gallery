<h1><%= @user.name %> Features</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Project</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @features.each do |feature| %>
  <tr>
    <td><%= feature.title %></td>
    <td><%= feature.project.name %></td>
    <td><%= link_to 'Show', feature %> | </td>
    <td><%= link_to 'Edit', edit_feature_path(feature) %> | </td>
    <td><%= link_to 'Destroy', feature , method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New feature', new_user_feature_path(@user) %> | 
