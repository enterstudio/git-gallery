<h1><%= @user.name %> Features</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @features.each do |feature| %>
  <tr>
    <td><%= feature.title %></td>
    <td><%= feature.description %></td>
    <td><%= link_to 'Show', user_feature_path(@user, feature)%> | </td>
    <td><%= link_to 'Edit', edit_user_feature_path(@user, feature) %> | </td>
    <td><%= link_to 'Destroy', user_feature_path(@user, feature) , method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New feature', new_user_feature_path(@user) %> | 
<%= link_to_function "Back", "history.back()" %>
