<h1><%= @user.name %> Features</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Project</th>
    <th></th>
    <th></th>
  </tr>

  <% @features.each do |feature| %>
    <tr>
      <td><%= link_to "#{feature.title}", feature %></td>
      <td><%= feature.project.name %></td>
      
      
      <!-- MOVE THIS LOGIC FROM THE VIEW -->
      <% if current_user == @user %>
        <td><%= link_to 'Edit', edit_feature_path(feature) %></td>
        <td> | <%= link_to 'Destroy', feature , method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<br>
