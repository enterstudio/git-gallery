<div class="slides-custom">

<h1 id="project-title">
<div>
    <div class="hero-inline">
        <%= best_in_place @feature, :title, :type => :input, :activator => ".activator-#{@feature.id}-name" %>
    </div>
    <div class="activator-<%= @feature.id %>-name">
      <i class="hero icon-pencil"></i>
      </div>
</div>
</h1>

<div class="description-custom">
  <div class="hero-inline">
  <p id="project-description">
      <%= best_in_place @feature, :description, :type => :input, :activator => ".activator-#{@feature.id}-description" %>
  </p>
  </div>
</div>

  <div class="activator-<%= @feature.id %>-description"><i class="hero icon-pencil"></i></div>

<div class="clearfix"></div>
<h3>Check Out Your Slides</h3>


<div class="tabbable tabs-left">
      <ul class="nav nav-tabs sortable" data-feature-id="<%= @feature.id %>">
       <% @feature.slides_in_order.each_with_index do |slide, index| %>
       <% myclass = index == 0 ? 'active' : ''%>
        <li data-id="<%=slide.id %>" data-class-type="<%= slide.class %>" class="<%=myclass %>"><a href="#l<%=index%>" data-toggle="tab">Slide <%=index + 1%></a></li>
      <%end %>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="lA">
          <p>I'm in Section A.</p>
        </div>
        <div class="tab-pane" id="lB">
          <p>Howdy, I'm in Section B.</p>
        </div>
        <div class="tab-pane" id="lC">
          <p>What up girl, this is Section C.</p>
        </div>
      </div>
  </div>



<h3>Pick Your Technologies</h3>
  <div class="controls">
  <!--  <%= label_tag 'feature[technologies_to_add][]', 'Technologies', class: "control-label" %> -->
    <select data-placeholder="Choose Technologies..." name="feature[technology_ids][]" class="chosen-select" multiple style="width:350px;" tabindex="4">
      <option value=""></option>
      <% for technology in @technologies %>
       <option value=<%= technology.id%>><%= technology.name %></option>
      <% end %>
    </select>
  </div>
  <div class="pager-custom">
<ul class="pager">
    <li class="next"><%= link_to 'Go to Feature Page â†’', @feature %></li>
</ul>
</div>
</div>






