<!-- ajax included  -->

  <div class="tabbable tabs-left">
    <ul class="nav nav-tabs sortable sortable-placeholder">
      <% @feature.slides_in_order.each_with_index do |slide, index| %>
      <% myclass = index == 0 ? 'active' : ''%>
        <li class="<%=myclass %>">
          <a href="#l<%=index%>" data-toggle="tab"> Slide <%=index + 1%></a>
        </li>
      <% end %>
    </ul>

    <div class="tab-content">
      <% @feature.slides_in_order.each_with_index do |slide, index| %>
      
        <div class="tab-pane" id="l<%= index %>">
            <li draggable="true" class="" style="display: list-item;">
              <input type="hidden" name="slides[][class]" value="<%= slide.class %>"></input>
              <input type="hidden" name="slides[][id]" value="<%= slide.id %>"></input>
              <p><%= slide.name %></p>
              <p><%= slide.description%></p>
              <p><%= snippet_or_upload_show(slide) %></p>
            </li>
        </div>
      <% end %>
    </div>
  </div>

        
