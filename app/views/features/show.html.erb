<p id="notice"><%= notice %></p>
<div class="small-12 columns">
 
  <h1 class="gg-head">
    Project: <%= link_to "#{@feature.project.name}", @feature.project %>
  </h1>
  <h2 class="gg-head">
    Feature: <b><%= @feature.title %></b>
  </h2>

  <div class="panel">
    <p class="gg-p"><b>Description:</b> <%= @feature.description %></p>
      <div class="gg-div">
        <% @feature.snippets.each do |snippet| %>
        <span>
          <h4><%= link_to snippet.name, snippet.url %></h4>
          <span class="right">
          <%= link_to "Edit", edit_snippet_path(snippet) %>
        </span>
      </span>
        <p><%= snippet.description %></p>

        <div class="gg-snippets">
          <%= raw Pygments.highlight(snippet.code, lexer: snippet.language) %>
        </div>
    <% end %>
    </div>

<p><b>Image(s):</b>
    <% @feature.uploads.each do |upload| %>
      <%= image_tag upload.image_url.to_s, width: '100' if upload.image? %>
    <% end %>
</p>

 <b>Check Out <%= @feature.user.name.split.first %>'s Other Work Using These Technologies:</b>
  <ul class="gg-list-inline">
    <% @feature.technologies.each do |technology| %>
      <li><%= link_to technology.name, user_technology_path(@feature.user, technology) %></li>
    <% end %>
  </ul>
</div>

<%= link_to 'Edit', edit_feature_path(@feature) %> |
<%= link_to "Back to #{@feature.project.name}", @feature.project %> | 
<%= link_to "Upload an Image", [:new, @feature, :upload] %> |
<%= link_to 'Add Snippet', new_feature_snippet_path(@feature) %> |